{
  "manifest_version": 2,
  "name": "Connect",
  "version": "0.2.0",
  "content_security_policy": "script-src 'self' ",
  "description": "Allows users to choose their Identity Providers.",
  "icons": {
    "64": "/assets/icon64.png"
  },
  "background": {
    "page": "/background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "/addon_scripts/wid_api.js"
      ]
    }
  ],
  "sandbox": {
    "pages": [ "/sandbox.html" ],
    "content_security_policy":"sandbox allow-scripts; script-src 'self' https://energyq.idp.rethink.orange-labs.fr"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_title": "Connect",
    "default_icon": {
      "64": "/assets/icon64.png"
    },
    "default_popup": "/index.html#dashboard"
  }
}
